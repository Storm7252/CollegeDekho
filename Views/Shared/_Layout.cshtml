<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JD.com</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JD.com.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body style="margin-top: 20px;" class="bg-warning bg-opacity-25">
    <div class="container mb-3">
        <div class="row">
            <div class="col-sm-6">
                <p class="d-inline"><i class="fas fa-phone"></i>9889990988</p>
                <span>&nbsp;&nbsp;&nbsp;</span>
                <a href="mailto:justdial@gmail.com" class="d-inline"><i class="fas fa-envelope"></i>Mail us</a>
            </div>
            <div class="col-sm-6 text-right" style="padding-left:200px">
                <p class="d-inline">We are on your favorite social media:</p>&nbsp;&nbsp;&nbsp;
                <a href="https://www.instagram.com/storm"><i class="fab fa-instagram"></i></a>&nbsp;&nbsp;&nbsp;
                <a href="https://www.facebook.com/"><i class="fab fa-facebook-f"></i></a>&nbsp;&nbsp;&nbsp;
                <a href="https://twitter.com/"><i class="fab fa-twitter"></i></a>&nbsp;&nbsp;&nbsp;
                <a href="https://www.youtube.com/"><i class="fab fa-youtube"></i></a>&nbsp;&nbsp;&nbsp;
            </div>
        </div>
    </div>
    <div class="container bg-secondary rounded-pill bg-opacity-50">
        <div class="row">
            <div class="col-sm-4" style="position:relative">
                <img src="~/images/jd.png" style="width:80px;height:80px" />
            </div>
            <div class="col-sm-8 p-4">
                <a href="" style="padding-right:40px; float:right; padding-left:30px" class="btn btn-outline-warning rounded-pill">Register</a>
                <a href="" style="padding-right:50px; float:right;  padding-left:50px" class="btn btn-outline-warning rounded-pill"> Login</a>
            </div>
        </div>
    </div>

  
 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Storm
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
